<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_8">



        <TextView
            android:visibility="gone"
            android:id="@+id/txt_more_text"
            android:layout_width="@dimen/dp_34"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="@dimen/sp_14"
            android:text="-4"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/image_send"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_5"
            />

        <ImageView
            android:id="@+id/image_send"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_alignBottom="@+id/edit_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_2"
            android:src="@mipmap/icon_send" />


        <TextView
            android:id="@+id/txt_cover"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edit_content"
            android:layout_alignBottom="@+id/edit_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_edittext_bg" />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_46"
            android:background="@drawable/shape_edittext_bg"
            android:gravity="left|center_vertical"
            android:hint="我来补充两句~"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:maxLines="3"
            android:minHeight="@dimen/dp_34"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_2"
            android:singleLine="false"
            android:textColor="#000"
            android:textColorHint="#9A9A9A"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>


</RelativeLayout>