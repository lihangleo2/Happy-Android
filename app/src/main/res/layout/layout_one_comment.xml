<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        >


        <RelativeLayout
            android:padding="1px"
            android:id="@+id/relative_head"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_15">

            <ImageView
                android:id="@+id/image_head_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_head" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linear_why"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relative_head"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp_150"
                android:id="@+id/txt_name_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="名称"
                android:textColor="@color/grey_99"
                android:textSize="@dimen/sp_12" />




        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linear_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_why"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_comment_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/linear_like_"
                android:ellipsize="end"
                android:text="我是一条小评论"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />


            <LinearLayout
                android:id="@+id/linear_like_"
                android:layout_width="@dimen/dp_38"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</layout>